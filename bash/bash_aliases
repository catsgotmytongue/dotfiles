#!/bin/bash

############################ ALIASES #################################
alias cpd='cp -R'
alias ltr='ls -ltr'
alias :q='exit'
alias chal='vi ~/.bash_aliases; source ~/.bash_aliases'
alias ll='ls -lh'
alias lsd='ls -ldh'
alias l='ls -1'
alias lf='ls -fog --color'
alias ls-l='ls -lh'
alias tl='t ls'
alias igrep='grep -i'
alias src='source ~/.bashrc'
alias vi_func='vi ~/.bash_functions'
alias disksize='du -h -s'
alias pd='popd > /dev/null'
alias db='cd ~/Dropbox/Public'
alias ks='ls' # in case I oops when hitting ls
alias d='dirs -v'
alias l*='ls *'
alias la='ls -A'
alias lla='ls -lA'
